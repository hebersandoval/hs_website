<% provide(:title, "Blog") %>

<!-- PAGE HEADER -->
	<section id="page-header">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-title">
						<h1>Blog</h1>
						<span class="st-border"></span>
					</div>
				</div>
			</div>
		</div>
	</section><!-- /PAGE HEADER -->

	<% if user_signed_in? %>
		<% if current_user.try(:admin?) %>
			<%= link_to new_post_path, class: "btn btn-default" do %>
				<i class="glyphicon glyphicon-plus"></i>
			<% end %>
		<% end %>
	<% end %>


	<!-- BLOG -->
	<section id="blog">
		<div class="container">
			<div class="row">
				<div class="col-md-9">

					<% if @posts.present? %>
						<%= render 'post' %>
					<% else %>
						<div class="alert alert-danger" role="alert">
				      <p style="color:red";><em>There are no posts containing the term(s): <strong><%= params[:search] %>.</strong></em></p>
						</div>
					<% end %>

					<ul class="pagination">
						<li><a href="#"><i class="fa fa-angle-left"></i></a></li>
						<li class="active"><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
					</ul>
				</div>

				<%= render 'shared/sidebar' %>

			</div>
		</div>
	</section>
