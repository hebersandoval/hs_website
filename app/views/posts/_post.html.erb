<% @posts.each do |post| %>

  <div class="single-blog">
    <article>
      <div class="post-thumb">
        <%# image_tag("blog/01.jpg", class: "img-responsive", alt: "") %>
      </div>
      <h4 class="post-title"><a href=""><%= post.title %></a></h4>
      <div class="post-meta text-uppercase">
        <span><%= post.created_at.strftime("%B %d, %Y") %></span>

        <!-- Post categories -->
        <% post.categories.each do |category| %>
          <span>In <a href=""><%= category.name %></a></span>
        <% end %>

        <!-- <span>In <a href="">Design</a></span> -->
        <span>By <a href=""><%= post.user.email %></a></span>
      </div>
      <div id="content-<%= post.id %>" class="post-article">
        <%= truncate post.content, length: 220 %>
        <button class="js-more" data-id="<%= post.id %>">More...</button>
      </div>
      <%= link_to "Read More", post_path(post), class: "btn btn-readmore" %>
    </article>
  </div>
  <hr>

<% end %>
