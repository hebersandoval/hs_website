<div class="col-md-3">
  <div class="sidebar-widget">
    <div class="blog-search">
        <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for a post entry..." %>
            <span>
              <button type="submit" id="submit_btn" class="search-submit">
                <i class="fa fa-search"></i>
              </button>
            </span>
        <% end %>
    </div>
  </div>

  <div class="sidebar-widget">
    <h4 class="sidebar-title">Categories</h4>
    <ul>
      <!-- Show all categories here -->
      <% @categories.each do |category| %>
        <li><%= category.name %> (<%= category.id %>)</li>
      <% end %>
    </ul>
  </div>

  <div class="sidebar-widget">
    <h4 class="sidebar-title">Tags</h4>
    <div class="tagcloud">
      <a href="">design</a>
      <a href="">html</a>
      <a href="">php</a>
      <a href="">wordpress</a>
      <a href="">css</a>
      <a href="">development</a>
      <a href="">theme</a>
      <a href="">plugin</a>
    </div>
  </div>
</div>
